<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/panel_padding_top"
    android:paddingBottom="@dimen/panel_padding_bottom"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:background="#ffffff"
    tools:context="com.example.android.popularmovies.detailactivity.movieinfo.OverviewFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false">

        <TextView
            android:text="@string/tv_detail_overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginBottom="15dp"/>


        <TextView
            android:id="@+id/tv_detail_overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</FrameLayout>
